---
import Wrapper from "@/components/Wrapper.astro";

type Props = {
  title: string;
};

const { title } = Astro.props;
---

<section class="py-12">
  <Wrapper>
    <h2
      class="text-2xl md:text-4xl font-semibold leading-7 text-slate-500 pb-4 my-10 border-b border-b-slate-200"
    >
      {title}
    </h2>

    <slot />
  </Wrapper>
</section>
